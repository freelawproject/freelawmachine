{
    "variables": {
        "target_arch": "amd64",
        "ubuntu_version": "ubuntu-14.04.5-server",
        "atlas_username": "freelawproject",
        "atlas_name": "freelawbox64",
        "version": "2.1.0"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
            "script": "scripts/vagrant.sh"
        },
        {
            "type": "ansible-local",
            "playbook_file": "../ansible/freelawmachine.yml",
            "playbook_dir": "../ansible",
            "inventory_file": "../ansible/config/hosts_local"
        }
    ],
    "builders": [
        {
            "type": "virtualbox-iso",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz noapic preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname=freelawbox64 ",
                "fb=false debconf/frontend=noninteractive ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=USA keyboard-configuration/variant=USA console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz -- <enter>"
            ],
            "headless": true,
            "boot_wait": "10s",
            "disk_size": 2048,
            "guest_os_type": "Ubuntu_64",
            "http_directory": "http",
            "iso_checksum": "dde07d37647a1d2d9247e33f14e91acb10445a97578384896b4e1d985f754cc1",
            "iso_checksum_type": "sha256",
            "iso_urls": [
              "./iso/{{user `ubuntu_version`}}-{{user `target_arch`}}.iso",
              "http://mirror.pnl.gov/releases/trusty/{{user `ubuntu_version`}}-{{user `target_arch`}}.iso"
            ],
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'",
            "guest_additions_path": "VBoxGuestAdditions.iso",
            "virtualbox_version_file": ".vbox_version",
            "vboxmanage": [
              ["modifyvm", "{{.Name}}", "--memory", "4096"],
              ["modifyvm", "{{.Name}}", "--cpus", "2"]
            ]
        }
    ],
    "post-processors": [
      [{
        "type": "vagrant",
        "keep_input_artifact": false,
        "output": "{{user `atlas_name`}}-{{user `version`}}.box"
      }]
    ]
}
